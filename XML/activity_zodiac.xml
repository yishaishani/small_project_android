<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_zodiac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yishaishani.project_finel.Zodiac">

    <Button
        android:text="Home Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/WHITE"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/BhomeZodiac"
        android:onClick="move_Main" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:calendarViewShown="false"
        android:startYear="1930"
        android:id="@+id/DatePicker" />

    <Button
        android:text="set date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BhomeZodiac"
        android:textColor="@color/WHITE"
        android:background="@color/blue"
        android:layout_alignLeft="@+id/BhomeZodiac"
        android:layout_alignStart="@+id/BhomeZodiac"
        android:layout_marginBottom="18dp"
        android:id="@+id/setDate"
        android:onClick="CalcZodiac" />

    <TextView
        android:text="your zodiac:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/zodiacResult"
        android:layout_below="@+id/DatePicker"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainPicture"
        android:layout_above="@+id/setDate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

</RelativeLayout>
